    const cookieOptions = { expires: 1 };

    layui.use('form', function () {
      var form = layui.form(), jq = layui.jquery;
      form.on('submit(comment_add)', function (data) {
        loading = layer.load(2, {
          shade: [0.2, '#000']
        });
        var param = data.field;

        var group = param.city.split('/');
        var tpData = {
          yf: param.youfei,
          customerName: param.content,
          customerPhone: param.dianhua,
          customerAddress: [group[0], group[1], group[2], param.dizhi],
          model: ['充值卡:'+param.chongzhi, '款式:'+param.modal],
          account: account,
          product: product,
          accessLink: location.href
        };

        jq.ajax({
          url: '/order',
          type: 'post',
          data: JSON.stringify(tpData),
          contentType: 'application/json; charset=utf-8',
        }).then(function (res) {
          layer.close(loading);
          layer.msg('恭喜, 提交成功, 我们将尽快给您发货!', { icon: 1, time: 5000 }, function () {
            location.reload();
          });
          pushAccess(res.order._id);
          $.cookie('accessTime', Date.now(), cookieOptions);
        }, function () {
          layer.close(loading);
          layer.msg('抱歉, 请确认您访问页面是否正确!', { icon: 2, anim: 6, time: 1000 });
          console.error('😁');
        });
        return false;
      })
    });

    function pushAccess(orderID) {
      var now = Date.now();
      var accessTime = $.cookie('accessTime') || now;

      var data = {
        time: accessTime,
        shareLink: location.href,
        clientIP: clientIP,
        remain: parseInt((now - accessTime) / 1000),
        account: account,
        product: product
      };

      if (orderID) {
          data.order = orderID;
      }

      $.post('/access', data).then(function(res) {
        $.cookie('leaveTime', now, cookieOptions);
        $.cookie('accessID', res.access._id, cookieOptions);
      }, function(err) {
        console.error('访问记录失败!', err);
      });
    }
    
    if ($.cookie) {
      if (!$.cookie('accessTime')) {
        $.cookie('accessTime', Date.now(), cookieOptions);
      }

      window.onbeforeunload = function() {
        if (!$.cookie('accessID')) {
          pushAccess();
        }
      };
    }

    $(function(){ 
      pushHistory(); 
      window.addEventListener("popstate", function(e) { 
          //alert("我监听到了浏览器的返回按钮事件啦");//根据自己的需求实现自己的功能
          var ua = navigator.userAgent.toLowerCase(); 
          if(ua.match(/MicroMessenger/i)=="micromessenger") { 
            WeixinJSBridge.call('closeWindow'); //微信
          } else if (ua.indexOf("alipay")!=-1) { 
            AlipayJSBridge.call('closeWebview'); //支付宝
          } else if(ua.indexOf("baidu")!=-1) { 
            BLightApp.closeWindow(); //百度
          } else { 
            window.close(); //普通浏览器
          }  
        }, false); 

        if (!$.cookie('accessID')) {
          pushAccess();
        }
  
        function pushHistory() { 
          var state = { title: "title", url: "#"}; 
